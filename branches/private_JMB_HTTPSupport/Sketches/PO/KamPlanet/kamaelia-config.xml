<?xml version="1.0" encoding="utf-8"?>
<kamplanetconfig>
	<!-- General configuration -->
	<general>

		<!-- Name of the planet -->
		<name>Kamaelia Planet</name>

		<!-- Link of the planet -->
		<link>http://somewhere/</link>

		<!-- Where can I find the template for the RSS 2.0? -->
		<rssTemplateName>rss20.xml.tmpl</rssTemplateName>

		<!-- Where can I find the template for HTML output? -->
		<htmlTemplateName>index.html.tmpl</htmlTemplateName>

		<!-- Where do you want me to write the RSS 2.0 output? -->
		<rssFileName>output/rss20.xml</rssFileName>

		<!-- Where do you want me to write the HTML output? -->
		<htmlFileName>output/index.html</htmlFileName>

		<!-- How many posts do you want at max? -->
		<maxPostNumber>30</maxPostNumber>

	</general>

	<!-- 
		Feeds for this planet 

		Format per feed:
		<feed url="http://the.url.of.the.feed/">
			<name>Name of the blog</name>
			<face>/path/to/face.jpg</face> (optional)
			<faceWidth>64</faceWidth> (optional, in pixels)
			<faceHeight>64</faceHeight> (optional, in pixels)
		</feed>
	-->
	<feeds>
		<feed url="http://localhost/testing/feed1">
			<name>Blog 1</name>
		</feed>
		<feed url="http://localhost/testing/feed2">
