PYTHON=$(which python 2>/dev/null)

if [ -x "x$PYTHON" ] ; then
    echo "python executable not found - cannot continue!"
    exit 1
fi

exec $PYTHON -c "

import sys, os
version = sys.version_info[:2]
if version < (2,3):
    print 'Sorry, need python 2.3 or better; %s%s is too old' % version
    sys.exit(1)
sys.path.insert(0, sys.argv[1])
del sys.argv[0]

import main

main.main()" $0 $@
